{
    "include": ["src/**/*.ts", "src/**/*.js"],
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "Bundler",
        "target": "es2022",
        "lib": ["DOM", "ES2022"],
        "strict": true,
        "sourceMap": true,
        "checkJs": true,
        "allowJs": true,
        "outDir": "dist/"
    }
}